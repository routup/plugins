{
    "extends": "@tada5hi/tsconfig",
    "compilerOptions": {
        "declarationMap": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "noUncheckedIndexedAccess": false,
        "noPropertyAccessFromIndexSignature": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,

        "lib": ["ESNext"],
        "module": "ESNext",
        "target": "ES2020"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
