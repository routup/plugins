{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "packages": [
        "packages/*"
    ],
    "command": {
        "publish": {
            "ignoreChanges": [
                "*.md",
                "*.spec.js",
                "*.spec.ts",
                "LICENSE"
            ]
        },
        "version": {
            "message": "build(release): publish",
            "createRelease": "github"
        }
    },
    "conventionalCommits": true,
    "version": "independent"
}
